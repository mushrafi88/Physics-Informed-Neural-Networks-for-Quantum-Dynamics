#!/usr/bin/env bash
set -e
if [[ ! -d "/mnt/research/Physics-Informed-Neural-Networks-for-Quantum-Dynamics" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/mnt/research/Physics-Informed-Neural-Networks-for-Quantum-Dynamics")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/mnt/research/Physics-Informed-Neural-Networks-for-Quantum-Dynamics" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/mnt/research/Physics-Informed-Neural-Networks-for-Quantum-Dynamics/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/mnt/research/Physics-Informed-Neural-Networks-for-Quantum-Dynamics/.envrc" "/mnt/research/Physics-Informed-Neural-Networks-for-Quantum-Dynamics/.direnv"/*.rc
